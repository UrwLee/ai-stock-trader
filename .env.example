# ========== 股票API配置 ==========

# Tushare Token (注册获取: https://tushare.pro)
# 免费用户有基础数据权限，付费用户可获取更多数据
TUSHARE_TOKEN = your_tushare_token_here

# ========== 券商API配置 (实盘交易需要) ==========

# 东方财富证券
# EFINITY_TOKEN = your_token_here

# 华鑫证券 (支持A股)
# TORATOKEN = your_token_here

# ========== 数据库配置 (可选) ==========

# SQLite (默认，无需配置)
# 数据存储在 data/stocks.db

# MySQL (可选)
# MYSQL_HOST = localhost
# MYSQL_PORT = 3306# MYSQL_USER = root
# MYSQL_PASSWORD = your_password
# MYSQL_DATABASE = stock_quant

# ========== 其他配置 ==========

# 初始资金 (元)
INITIAL_CAPITAL = 10000

# 单只股票最大仓位比例
MAX_POSITION_WEIGHT = 0.3

# 止损比例
STOP_LOSS_RATIO = 0.1

# 止盈比例TAKE_PROFIT_RATIO = 0.2

# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL = INFO
